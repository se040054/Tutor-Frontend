<h1 class="h1 mb-5">Register</h1>
<form action="/users/register" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email</label>
    <input type="email" class="form-control"aria-describedby="emailHelp" name="email" id="email">
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="confirmPassword">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a href="/users/login">Already have an account ? Login</a>